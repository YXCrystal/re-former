<h1> HTML only form </h1>

<form action="/users" method="post" accept-charset="UTF-8">
  <label for="username"> Username:</label>
  <input type="text" id="username" name="user[username]"><br><br>
  <label for="password"> Password:</label>
  <input type="password" id="password" name="user[password]"><br><br>
  <label for="email"> Email:</label>
  <input type="email" id="email" name="user[email]"><br><br>
  <input type="submit" value="Submit">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>

<% if @user.errors.messages.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%=msg%></li>
      <% end %>
  </ul>
  <% end %>

<h1> Rails Form </h1>

<%= form_tag("/users") do %>
  <%= label 'username', "Username:" %>
  <%= text_field_tag 'user[username]' %><br><br>
  <%= label "password", "Password:" %>
  <%= password_field_tag 'user[password]'%><br><br>
  <%= label "email", "Email:" %>
  <%= email_field_tag 'user[email]' %><br><br>
  <%= submit_tag 'Submit' %>
<% end %>

<h1> Rails form using Form_for helper </h1>

<%= form_for(@user) do |f| %>
    <%= f.label 'username', "Username:" %>
    <%= f.text_field :username %><br><br>

    <%= f.label "password", "Password:" %>
    <%= f.password_field :password%><br><br>

    <%= f.label "email", "Email:" %>
    <%= f.email_field :email%><br><br>
    
    <%= f.submit 'Submit' %>
  <% end %>